<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="kr.kro.uptune.uptuneandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/paddinglogo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/ic_logo"
            android:supportsRtl="true"
            android:theme="@style/UptuneTheme"
            android:usesCleartextTraffic="true">
        <activity android:name=".ClassVideoViewActivity">
        </activity>
        <activity android:name=".ShowClassActivity">
        </activity>
        <activity android:name=".VideoUploadActivity">
        </activity>
        <activity android:name=".ClassListActivity">
        </activity>
        <activity android:name=".TrendViewActivity">
        </activity>
        <activity android:name=".TrendListActivity">
        </activity>
        <activity android:name=".HomeActivity">
        </activity>
        <activity android:name=".RegisterActivity">
        </activity>
        <activity android:name=".LoginActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>