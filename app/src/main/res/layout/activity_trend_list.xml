                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5sp"
                        android:id="@+id/ttrend1Layout"
                        android:visibility="gone"
                        android:onClick="onTrendClick"
                >
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/ttrend1Id"
                            android:text=""
                            android:visibility="gone"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <TextView
                            android:text=""
                            android:singleLine="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/ttrend1Title"
                            android:textColor="@color/black"
                            android:textSize="25sp"
                    />
                    <TextView
                            android:text="글쓴이:  작성일:  좋아요 : "
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:textSize="15sp"
                            android:layout_height="wrap_content" android:id="@+id/ttrend1Info"
                            android:layout_weight="1"
                    />
                </LinearLayout>
